{
  "expo": {
    "name": "AirQ Monitor",
    "slug": "airq-monitor",
    "version": "1.0.0",
    "description": "Real-time air quality monitoring with Bluetooth connectivity",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "rgb(0, 0, 0)"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.airqmonitor",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to AirQ monitoring devices for air quality data collection.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to AirQ monitoring devices for air quality data collection.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access for Bluetooth device scanning (required by iOS for BLE)."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "rgb(0, 0, 0)"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.airqmonitor",
      "versionCode": 1,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "baseUrl": "/AQEye/"
    },
    "plugins": [
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
