{
  "expo": {
    "name": "SpO2 Monitor",
    "slug": "spo2-monitor",
    "version": "1.0.0",
    "description": "Real-time blood oxygen and heart rate monitoring with Bluetooth connectivity",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.spo2monitor",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to SpO2 monitoring devices for health data collection.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to SpO2 monitoring devices for health data collection.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access for Bluetooth device scanning (required by iOS for BLE)."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.spo2monitor",
      "versionCode": 1,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
